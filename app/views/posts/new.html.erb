<% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @post do |f| %>
<div class="post_input">
    <div class="input_field">
      <%= f.label :title %>
      <%= f.text_field :title %>      
    </div>
    <div class="input_field">
      <%= f.label :body %>
      <%= f.text_field :body %>      
    </div>
    <%= f.submit 'Submit', :class => 'button btn btn-outline-primary' %>
  </div>
<% end %>


